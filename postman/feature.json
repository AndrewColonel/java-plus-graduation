									"  pm.expect(jsonData.length).to.eql(2);",
									"});",
									"",
									"const expectedEventId = Number(pm.collectionVariables.get(\"eventId\"));",
									"const savedCreatorId = pm.collectionVariables.get(\"creatorId\");",
									"",
									"const ids = new Set(jsonData.map(c => Number(c.id)));",
									"pm.test(\"В списке комментариев присутствуют id 1 и 2\", function () {",
									"  pm.expect(ids.has(1)).to.eql(true);",
									"  pm.expect(ids.has(2)).to.eql(true);",
									"});",
									"",
									"pm.test(\"Все комментарии принадлежат одному eventId\", function () {",
									"  const eventIds = new Set(jsonData.map(c => Number(c.eventId)));",
									"  if (!isNaN(expectedEventId)) {",
									"    pm.expect(eventIds.size).to.eql(1);",
									"    pm.expect(eventIds.has(expectedEventId)).to.eql(true);",
									"  } else {",
									"    pm.expect(eventIds.size).to.eql(1);",
									"    pm.collectionVariables.set(\"eventId\", String(jsonData[0].eventId));",
									"  }",
